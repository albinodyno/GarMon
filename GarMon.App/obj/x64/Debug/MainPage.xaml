<Page
    x:Class="GarMon.App.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GarMon.App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="Black" Margin="0,0,0,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />
            <!--<RowDefinition />-->
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:ConnectionId='5' Name="txbTimer" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="10"
                   Text="Starting..." FontSize="76" FontFamily="Gadugi" Foreground="DarkCyan" />

            <TextBlock x:ConnectionId='6' Name="txbChecks" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="10"
                   Text="CHECKS" FontSize="60" FontFamily="OCR A Extended" Foreground="DarkCyan" />

            <TextBlock x:ConnectionId='7' Name="txbStatus" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="10"
                   Text="STATUS" FontSize="60" FontFamily="OCR A Extended" Foreground="DarkCyan" />
            
            <TextBlock x:ConnectionId='8' Name="txbEStatus" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="10"
                   Text="E-STATUS" FontSize="60" FontFamily="OCR A Extended" Foreground="DarkCyan" />
        </StackPanel>

        <StackPanel Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Padding="10"
                   Text="Sensor" FontSize="60" FontFamily="OCR A Extended" Foreground="DarkGoldenrod" />
                <TextBlock x:ConnectionId='4' Name="txbSensorStatus" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="10"
                   Text="OFFLINE" FontSize="60" FontFamily="OCR A Extended" Foreground="DarkCyan" />
            </StackPanel>
            
            <StackPanel Orientation="Horizontal">
                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Padding="10"
                   Text="SQL" FontSize="60" FontFamily="OCR A Extended" Foreground="DarkGoldenrod" />
                <TextBlock x:ConnectionId='3' Name="txbSqlStatus" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="10"
                   Text="OFFLINE" FontSize="60" FontFamily="OCR A Extended" Foreground="DarkCyan" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Padding="10"
                   Text="Last SQL" FontSize="60" FontFamily="OCR A Extended" Foreground="DarkGoldenrod" />
                <TextBlock x:ConnectionId='2' Name="txbLastSql" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="10"
                   Text="NO UPDATES" FontSize="60" FontFamily="OCR A Extended" Foreground="DarkCyan" />
            </StackPanel>

        </StackPanel>

    </Grid>
</Page>

